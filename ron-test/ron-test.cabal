cabal-version:  2.2

name:           ron-test
version:        0

common language
    build-depends: base
    default-language: Haskell2010

library
    import: language
    build-depends: ron, ron-schema
    exposed-modules: LwwStruct.Types
    hs-source-dirs: lib

test-suite common
    import: language
    build-depends:
        -- global
        bytestring,
        containers,
        directory,
        extra,
        filepath,
        hedgehog,
        syb,
        tasty,
        tasty-hedgehog,
        tasty-hunit,
        -- project
        ron
    main-is: Common.hs
    type: exitcode-stdio-1.0

test-suite test
    import: language
    build-depends:
        -- global
        bytestring,
        directory,
        hedgehog,
        interpolate,
        mtl,
        tasty-hedgehog,
        tasty-th,
        text,
        -- project
        ron,
        -- package
        ron-test
    main-is: Main.hs
    other-modules:
        Gen
        HexDump
        LwwStruct
    type: exitcode-stdio-1.0

executable words
    import: language
    build-depends:
        -- global
        mtl,
        text,
        text-metrics,
        unordered-containers,
        -- project
        ron
    main-is: Words.hs
